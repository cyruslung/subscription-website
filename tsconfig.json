{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "noImplicitAny": false, // 是否在表達式和聲明上有隱含的any類型時報錯
    "baseUrl": "./",
    "paths": {
      "@/*": ["/*"],
      "@/public/*": ["public/*"],
      "@/pages/*": ["pages/*"],
      "@/common/*": ["common/*"],
      "@/components/*": ["components/*"],
      "@/constants/*": ["constants/*"],
      "@/actions/*": ["redux/actions/*"],
      "@/reducers/*": ["redux/reducers/*"],
      "@/sagas/*": ["redux/sagas/*"],
      "@/store/*": ["redux/store/*"],
      "@/services/*": ["services/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/validations/*": ["validations/*"],
      "@@/*": ["src/.umi/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}